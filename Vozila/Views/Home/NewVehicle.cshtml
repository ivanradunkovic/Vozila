@model Vozila.Models.VehicleModelPoco
@{
    ViewBag.Title = "NewVehicle";
}

<h2>Add new vehicle</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <div class="form-group">
                @Html.TextBoxFor(item => item.Name, new { placeholder = "Name", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(item => item.VehicleMakeId, (SelectList)ViewBag.MakerCategories, "Select make", new { @class = "form-control" })
            </div>
            <div class="row">
                <input type="submit" value="Save" class="btn btn-success btn-lg btn-block " />
                @Html.ActionLink("Back", "BackToHomePage", null, new { @class = "btn btn-default btn-lg btn-block" })
            </div>
        </div>
    </div>
}